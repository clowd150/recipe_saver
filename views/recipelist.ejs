<div id="recipeList">

	<% if (recipes.length >= 1) { %> 
		<% recipes.reverse() %>
		<% for (var i=0; i<recipes.length; i++) { %>
			<div class="recipeEntry">
				<input type="hidden" value="<%=recipes[i]._id%>" id="<%=recipes[i]._id%>">
				<div class="menu">
					<a href="#" class="editName">Edit Recipe Name</a><br>
					<a href="#" class="editUrl">Edit Url</a><br>
					<a href="#" class="editNotes">Edit Notes</a><br>
					<a href="#" class="delete">Delete Recipe</a>
				</div>
				<div class="rName">
					<a class="edit" href="#"><img src="edit.png" class="editImage"></a>
					<b><%=  recipes[i].recipeName %></b>
				</div>
				<div class="URL">
					<a href="<%=recipes[i].url%>" target="_blank"><%= recipes[i].url  %></a>
				</div>
				<% if (recipes[i].notes) { %>
					<div class="existingNote">
						<div class="noteIndicator">
							<a href="#" class="noteToggler">Show Notes</a>
						</div>
						<div class="notes">
							<%= recipes[i].notes %>
						</div>
					</div>
				<% } else { %>
					<div class="alternative">
						<div class="blank">
						</div>
						<div class="noNotes">
						</div>
					</div>
				<% } %>
				<div class="tags">
				<% if (recipes[i].tags.length >= 1) { %>
					
						<% for (var j=0; j<recipes[i].tags.length; j++) { %>
							<div class="aTag"><a href="#"><%= recipes[i].tags[j] %></a></div>
		    			<% } %>
		    			<img class="editTag" src="tagicon.png">
				<% } else { %>
					<img class="editTag" src="tagicon.png">
				<% } %>
				</div>
			</div>
	    <% } %>
	<% } else { %>
		<h1>NO RECIPES</h1>
	<% } %>
</div>
